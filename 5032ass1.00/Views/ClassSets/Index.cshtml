@model IEnumerable<_5032ass1._00.Models.ClassSet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* This is for the mapbox map. *@
<link href="https://api.mapbox.com/mapbox-gl-js/v2.4.1/mapbox-gl.css" rel="stylesheet">
<script src="https://api.mapbox.com/mapbox-gl-js/v2.4.1/mapbox-gl.js"></script>
@*This is used for the Geocoding Mapbox API*@
<script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.2/mapbox-gl-geocoder.min.js"></script>
<link rel="stylesheet" href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.7.2/mapbox-gl-geocoder.css" type="text/css">


<div id="map" style="height: 600px;margin-top:100px"> </div>

<h2>Index</h2>
@if (User.IsInRole("Admin"))
{<p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class_Des)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class_Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class_Lng)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class_Lat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class_Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr class="coordinates">
                <td class="name">
                    @Html.DisplayFor(modelItem => item.Class_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class_Des)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class_Rate)
                </td>
                <td class="latitude">
                    @Html.DisplayFor(modelItem => item.Class_Lng)
                </td>
                <td class="longitude">
                    @Html.DisplayFor(modelItem => item.Class_Lat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class_Date)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit |", "Edit", new { id = item.Id }) 
                        @Html.ActionLink(" Delete ", "Delete", new { id = item.Id })

                    }

                    @Html.ActionLink("| Details", "Details", new { id = item.Id })

                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts
    {
    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
    <script src="~/Scripts/map.js"></script>
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>

}
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />